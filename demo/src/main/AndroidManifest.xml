<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.rokid.glass.ui.sample">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.rokid.glass.ui.sample.MainActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".InfinityActivity"
            android:screenOrientation="landscape" />

        <activity
            android:name=".TextViewActivity"
            android:screenOrientation="landscape">

        </activity>

        <activity
            android:name=".TextView2Activity"
            android:screenOrientation="landscape" />

        <activity
            android:name=".AutoSizeActivity"
            android:screenOrientation="landscape" />

        <activity
            android:name=".FontActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".IMUActivity"
            android:screenOrientation="landscape" />

        <activity
            android:name=".handcontrol.HandControlActivity"
            android:screenOrientation="landscape" />
        <!-- default width in dp -->
        <meta-data
            android:name="design_width_in_dp"
            android:value="640" />
        <meta-data
            android:name="design_height_in_dp"
            android:value="360" />
    </application>

    <uses-permission android:name="android.permission.SYSTEM_OVERLAY_WINDOW" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
</manifest>