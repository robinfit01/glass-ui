<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_title"
        style="@style/GlassText.LargeLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dialog_button_margin_top"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="3"
        android:paddingLeft="@dimen/glass_dialog_padding"
        android:paddingRight="@dimen/glass_dialog_padding" />

    <TextView
        android:id="@+id/dialog_content"
        style="@style/GlassText.Normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/glass_dialog_margin"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="3"
        android:paddingLeft="@dimen/glass_dialog_padding"
        android:paddingRight="@dimen/glass_dialog_padding" />

    <ViewStub
        android:id="@+id/dialog_custom_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/glass_dialog_margin"
        android:layout="@layout/layout_glass_content"
        android:paddingLeft="@dimen/glass_dialog_padding"
        android:paddingRight="@dimen/glass_dialog_padding" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/glass_dialog_margin"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <com.rokid.glass.ui.button.GlassButton
            android:id="@+id/dialog_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.rokid.glass.ui.button.GlassButton
            android:id="@+id/dialog_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/glass_btn_margin_left" />
    </LinearLayout>
</LinearLayout>